---
import clsx from "clsx";

export type Props = {
	slides: string[];
};

const { slides } = Astro.props;
---

<div
	class={clsx(
		"h-48 border-y",

		"group-focus-visible:bg-foreground/5",
		"hover:bg-foreground/5",
	)}
>
	<div
		class="group flex h-full [mask-image:linear-gradient(to_right,transparent_0,#10100e_10%,#10100e_calc(100%-200px),transparent_100%)]"
	>
		{
			Array.from({ length: 2 }).map(() => (
				<ul
					class={clsx(
						"animate-slide-left flex h-full shrink-0 items-center gap-4 will-change-transform",

						"group-focus-visible:[animation-play-state:paused]",
						"group-hover:[animation-play-state:paused]",
					)}
				>
					{slides.map((slide) => (
						<li
							class={clsx(
								"flex h-full items-center gap-6 select-none",

								"first:ml-4",
							)}
						>
							<div class="bg-primary h-3 w-3 rounded-full" />

							<p class="text-2xl font-bold tracking-wider">{slide}</p>

							<svg
								class="fill-foreground h-10 w-10"
								height="24"
								viewBox="0 0 24 24"
								width="24"
								xmlns="http://www.w3.org/2000/svg"
							>
								<path d="M10.296 7.71 14.621 12l-4.325 4.29 1.408 1.42L17.461 12l-5.757-5.71z" />
								<path d="M6.704 6.29 5.296 7.71 9.621 12l-4.325 4.29 1.408 1.42L12.461 12z" />
							</svg>
						</li>
					))}
				</ul>
			))
		}
	</div>
</div>
