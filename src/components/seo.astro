---
/**
 * Common head elements
 */

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!-- Global Metadata -->
<meta charset="UTF-8" />
<meta
	name="keywords"
	content="ragofjoes,victor,ragojos,victor ragojos,portfolio,software engineer,developer"
/>
<meta name="robots" content="index,follow" />
<meta name="theme-color" content="#121113" />
<meta name="application-name" content="RagOfJoes" />
<meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0" />

<meta http-equiv="content-type" content="text/html, charset=UTF-8" />

<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

<link rel="canonical" href={canonicalURL} />
<link rel="manifest" href="/site.webmanifest" />

<link rel="sitemap" href="/sitemap-index.xml" />

<script
	is:inline
	type="application/ld+json"
	set:html={JSON.stringify({
		"@context": "https://schema.org",
		"@type": "Person",
		"@id": `${Astro.site}#person`,
		name: "Victor Ragojos",
		url: Astro.site,
		jobTitle: "Lead Frontend Engineer",
		sameAs: [
			"https://github.com/ragofjoes",
			"https://linkedin.com/in/ragofjoes",
			"https://letterboxd.com/ragofjoes",
		],
	})}
/>
<script
	is:inline
	type="application/ld+json"
	set:html={JSON.stringify({
		"@context": "https://schema.org",
		"@type": "WebSite",
		"@id": `${Astro.site}#website`,
		url: Astro.site,
		name: "Victor Ragojos' Portfolio",
		description:
			"Portfolio of Victor Ragojos, senior software engineer building secure, scalable systems and thoughtful AI assisted user experiences. Based in the Bay Area.",
		publisher: {
			"@id": `${Astro.site}#person`,
		},
		inLanguage: "en",
	})}
/>
<script
	is:inline
	type="application/ld+json"
	set:html={JSON.stringify({
		"@context": "https://schema.org",
		"@type": "WebPage",
		"@id": `${Astro.site}#webpage`,
		url: Astro.site,
		name: "Victor Ragojos' Portfolio",
		description:
			"Portfolio of Victor Ragojos, senior software engineer building secure, scalable systems and thoughtful AI assisted user experiences. Based in the Bay Area.",
		isPartOf: {
			"@id": `${Astro.site}#website`,
		},
		about: {
			"@id": `${Astro.site}#person`,
		},
		inLanguage: "en",
	})}
/>
