---
import dayjs from "dayjs";
import RelativeTime from "dayjs/plugin/relativeTime";

import { Header } from "@/components/Header";
import Seo from "@/components/Seo.astro";

export type Props = {
	title?: string;
	description?: string;
};

const {
	title = "Victor Ragojos",
	description = "I'm a software engineer that specializes in building fun and useful applications. I'm currently focusing on building and maintaining products at Offset.",
} = Astro.props;

dayjs.extend(RelativeTime);
---

<!doctype html>
<html
	dir="ltr"
	lang="en"
	class="scroll-smooth selection:bg-rsp-rose selection:text-rsp-base"
>
	<head>
		<Seo />

		<title>{title}</title>

		<!-- Open Graph -->
		<meta property="og:url" content={Astro.url} />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta name="description" property="og:description" content={description} />
		<meta property="og:image" content={`${Astro.url}socialImage.webp`} />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta property="twitter:domain" content="ragofjoes.dev" />
		<meta property="twitter:url" content={Astro.url} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={`${Astro.url}socialImage.webp`} />
	</head>

	<body
		class="h-screen w-screen overflow-y-auto overflow-x-hidden bg-rsp-base text-rsp-text"
	>
		<Header client:load url={Astro.url} />

		<slot />
	</body>
</html>
